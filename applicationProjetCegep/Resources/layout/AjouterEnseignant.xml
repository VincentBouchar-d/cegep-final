<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste de(s) enseignant(s) :"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="300px"
        android:id="@+id/listViewEnseignant"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_marginLeft="80px"
        android:layout_gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="135px"
            android:text="No :"/>
        <EditText
            android:layout_width="355px"
            android:layout_height="100px"
            android:id="@+id/edtNoEnseignant"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_marginLeft="80px"
        android:layout_gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="135px"
            android:text="Nom :"/>
        <EditText
            android:layout_width="355px"
            android:layout_height="100px"
            android:id="@+id/edtNomEnseignant"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_marginLeft="80px"
        android:layout_gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="135px"
            android:text="PrÃ©nom :"/>
        <EditText
            android:layout_width="355px"
            android:layout_height="100px"
            android:id="@+id/edtPrenomEnseignant"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:orientation="horizontal "
        android:layout_marginLeft="80px"
        android:layout_gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="90px"
            android:text="Adresse :"/>
        <EditText
            android:layout_width="355px"
            android:layout_height="100px"
            android:id="@+id/edtAdresseEnseignant"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:orientation="horizontal "
        android:layout_marginLeft="80px"
        android:layout_gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="140px"
            android:text="Ville :"/>
        <EditText
            android:layout_width="355px"
            android:layout_height="match_parent"
            android:id="@+id/edtVilleEnseignant"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:orientation="horizontal "
        android:layout_marginLeft="80px"
        android:layout_gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="86px"
            android:text="Province :"/>
        <EditText
            android:layout_width="355px"
            android:layout_height="wrap_content"
            android:id="@+id/edtProvinceEnseignant"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:orientation="horizontal "
        android:layout_marginLeft="80px"
        android:layout_gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Code Postal :"
            android:layout_marginRight="45px"/>
        <EditText
            android:layout_width="355px"
            android:layout_height="wrap_content"
            android:id="@+id/edtCodePostalEnseignant"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:orientation="horizontal "
        android:layout_marginLeft="80px"
        android:layout_gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="66px"
            android:text="Telephone :"/>
        <EditText
            android:layout_width="355px"
            android:layout_height="wrap_content"
            android:id="@+id/edtTelephoneEnseignant"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:orientation="horizontal "
        android:layout_marginLeft="80px"
        android:layout_gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Courriel :"
            android:layout_marginRight="100px"/>
        <EditText
            android:layout_width="355px"
            android:layout_height="wrap_content"
            android:id="@+id/edtCourrielEnseignant"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:text="AJOUTER"
        android:id="@+id/btnAjouterEnseignant"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>

