<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste de(s) Cours(s) :"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="300px"
        android:id="@+id/listViewCours"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_marginLeft="80px"
        android:layout_gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="135px"
            android:text="No :"/>
        <EditText
            android:layout_width="355px"
            android:layout_height="100px"
            android:id="@+id/edtNoCours"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:layout_marginLeft="80px"
        android:layout_gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="135px"
            android:text="Nom :"/>
        <EditText
            android:layout_width="355px"
            android:layout_height="100px"
            android:id="@+id/edtNomCours"/>
    </LinearLayout>

    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:orientation="horizontal "
        android:layout_marginLeft="80px"
        android:layout_gravity="left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="66px"
            android:text="Description :"/>
        <EditText
            android:layout_width="355px"
            android:layout_height="wrap_content"
            android:id="@+id/edtDescriptionCours"/>
    </LinearLayout>

    

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:text="AJOUTER"
        android:id="@+id/btnAjouterCours"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>

